{
  "name": "@basket/serialize-form",
  "version": "1.0.0",
  "description": "html form to json serializer",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:codestyle": "eslint ."
  },
  "author": "a@borovin.com",
  "license": "MIT",
  "dependencies": {
    "lodash": "^4.17.2"
  },
  "devDependencies": {
    "jest": "^17.0.3",
    "babel-jest": "^17.0.0",
    "babel-preset-es2015": "^6.16.0",
    "eslint": "^3.8.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/__tests__/**",
      "!coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6
    },
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "commonjs": true,
      "browser": true,
      "jest": true
    }
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
